@model List<TallerJuanMecanico.Models.TableViewModels.CitaCardViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<h2>Mis Citas</h2>
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-dark" onclick="document.location.href='@Url.Content("~/UserCita/Add")'" value="Agendar cita" />
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        @foreach (var cita in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Cita @cita.vehiculo</h5>
                        <p class="card-text">Fecha de inicio: @cita.fecha_inicio</p>
                        <p class="card-text">Fecha de fin: @cita.fecha_fin</p>
                        <p class="card-text">Estado: @cita.estado</p>
                        <p class="card-text">Cliente: @cita.Cliente</p>
                        <p class="card-text">Vehículo: @cita.vehiculo</p>
                        <p class="card-text">Modelo: @cita.Modelo</p>
                        <p class="card-text">Marca: @cita.marca</p>
                        <p class="card-text">Comentario del cliente: @cita.comentario_cliente</p>
                        <p class="card-text">Comentario del administrador: @cita.comentario_administrador</p>


                    </div>
                </div>
            </div>
        }
    </div>
</div>