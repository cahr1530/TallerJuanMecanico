@model List<TallerJuanMecanico.Models.TableViewModels.CitaTableViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Citas</h2>
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Cita/Add")'" value="Nuevo" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Cliente</th>
                    <th>Vehiculo</th>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Acciones</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.cita_id</td>
                        <td>@item.fecha_inicio</td>
                        <td>@item.fecha_fin</td>
                        <td>@item.Cliente</td>
                        <td>@item.vehiculo</td>
                        <td>@item.marca</td>
                        <td>@item.Modelo</td>
                        <td>
                            <input onclick="document.location.href='@Url.Content("~/Cita/Edit/" + item.cita_id)'" type="button" value="Editar" class="btn btn-success">

                            <input onclick="jsDelete(@item.cita_id)" type="button" value="Eliminar" class="btn btn-danger">
                        </td>
                    </tr>
                }
                </table>
            </div>
        </div>

    <script>
    function jsDelete(cita_id) {
        if (confirm("¿Está seguro de eliminar este registro?")) {
            url = "@Url.Content("~/Cita/Delete")" + "/" + cita_id;



           $.post(url, function (data) {

            if (data == "1") {
                document.location.href = "@Url.Content("~/Cita/")";
            }
            else {
                alert("Error al eliminar el registro");
            }
        });

        }


    }
    </script>